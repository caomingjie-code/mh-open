<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!--eslog-->
    <appender name="ESLOG" class="com.mh.base.eslog.appender.RabbitMQAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern> time ^|^ %d{HH:mm:ss.SSS} +|+ thread ^|^ [%thread] +|+ level ^|^ %-5level +|+ class ^|^ %logger{36}  +|+ msg ^|^ %msg </Pattern>
        </layout>

    </appender>

    <!--console-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!--{"age":"23","intValue":0,"name":"cmj"} json format-->
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} : %msg%n</Pattern>
        </layout>

    </appender>



<!--    <root level="info">&lt;!&ndash;log level&ndash;&gt;-->
<!--        &lt;!&ndash;use appender&ndash;&gt;-->
<!--        <appender-ref ref="STDOUT"/>-->
<!--    </root>-->

    <root level="error"><!--log level-->
        <!--use appender-->
        <appender-ref ref="ESLOG" />
    </root>


</configuration>